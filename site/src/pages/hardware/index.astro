---
import Base from '../../layouts/Base.astro';
import Breadcrumbs from '../../components/Breadcrumbs.astro';
import ArticleList from '../../components/ArticleList.astro';
import { getCollection } from 'astro:content';

const articles = await getCollection('hardware', ({ data }) => !data.draft);
---
<Base title="Hardware Guides" description="Hardware recommendations for self-hosting. NAS devices, mini PCs, drives, and server builds for every budget.">
  <Breadcrumbs crumbs={[{ label: 'Home', href: '/' }, { label: 'Hardware' }]} />
  <h1 style="margin-bottom: 1.5rem;">Hardware Guides</h1>
  <p style="color: var(--text-secondary); margin-bottom: 2rem;">Hardware recommendations for self-hosting. NAS devices, mini PCs, drives, and complete server builds for every budget.</p>
  <ArticleList articles={articles} collectionPath="/hardware/" />
</Base>
