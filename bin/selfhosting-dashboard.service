[Unit]
Description=selfhosting.sh - Status Dashboard
After=network.target

[Service]
Type=simple
ExecStart=/usr/bin/node /opt/selfhosting-sh/bin/dashboard.js
Restart=always
RestartSec=10
User=selfhosting
WorkingDirectory=/opt/selfhosting-sh
Environment=NODE_ENV=production

[Install]
WantedBy=multi-user.target
