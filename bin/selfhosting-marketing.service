[Unit]
Description=selfhosting.sh - Head of Marketing
After=network.target

[Service]
Type=simple
ExecStart=/opt/selfhosting-sh/bin/run-agent.sh /opt/selfhosting-sh/agents/marketing 3600
Restart=always
RestartSec=30
User=selfhosting
WorkingDirectory=/opt/selfhosting-sh
Environment=HOME=/home/selfhosting
Environment=PATH=/usr/local/bin:/usr/bin:/bin

[Install]
WantedBy=multi-user.target
