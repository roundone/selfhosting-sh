---
import BaseLayout from "./BaseLayout.astro";
import Breadcrumbs from "../components/Breadcrumbs.astro";
import AppCard from "../components/AppCard.astro";

interface Props {
  title: string;
  description: string;
  section: string;
  sectionLabel: string;
  articles: any[];
}

const { title, description, section, sectionLabel, articles } = Astro.props;
---

<BaseLayout title={title} description={description}>
  <Breadcrumbs
    items={[{ label: "Home", href: "/" }, { label: sectionLabel }]}
  />

  <header class="mt-6 mb-10">
    <h1
      class="text-3xl sm:text-4xl font-[family-name:var(--font-display)] font-extrabold"
    >
      {title}
    </h1>
    <p class="mt-3 text-secondary text-lg">{description}</p>
  </header>

  <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
    {articles.map((article) => <AppCard entry={article} section={section} />)}
  </div>
</BaseLayout>
