---
import { getCollection } from "astro:content";
import CategoryLayout from "../../layouts/CategoryLayout.astro";

const all = await getCollection("troubleshooting");
const sorted = all.sort((a, b) => a.data.title.localeCompare(b.data.title));
---

<CategoryLayout
  title="Troubleshooting"
  description="Common issues and fixes for self-hosted apps. Search by app or symptom."
  section="troubleshooting"
  sectionLabel="Troubleshooting"
  articles={sorted}
/>
