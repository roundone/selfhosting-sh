---
interface Props {
  apps: string[];
  features: { name: string; values: Record<string, string> }[];
}

const { apps, features } = Astro.props;
---

<div class="overflow-x-auto my-6">
  <table class="w-full text-sm border-collapse">
    <thead>
      <tr class="border-b border-border">
        <th
          class="text-left py-3 px-4 font-[family-name:var(--font-display)] font-bold text-primary"
          >Feature</th
        >
        {
          apps.map((app) => (
            <th class="text-left py-3 px-4 font-[family-name:var(--font-display)] font-bold text-primary">
              {app}
            </th>
          ))
        }
      </tr>
    </thead>
    <tbody>
      {
        features.map((feature, i) => (
          <tr
            class={`border-b border-border ${i % 2 === 0 ? "bg-surface/50" : ""}`}
          >
            <td class="py-3 px-4 text-secondary">{feature.name}</td>
            {apps.map((app) => (
              <td class="py-3 px-4 text-primary">
                {feature.values[app] || "â€”"}
              </td>
            ))}
          </tr>
        ))
      }
    </tbody>
  </table>
</div>
