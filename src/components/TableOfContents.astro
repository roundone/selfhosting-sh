---
interface Props {
  headings: { depth: number; slug: string; text: string }[];
}

const { headings } = Astro.props;
const toc = headings.filter((h) => h.depth >= 2 && h.depth <= 3);
---

{
  toc.length > 0 && (
    <nav
      class="my-8 p-4 rounded-lg bg-surface border border-border"
      aria-label="Table of contents"
    >
      <h2 class="text-sm font-[family-name:var(--font-mono)] font-bold text-muted uppercase tracking-wider mb-3">
        On this page
      </h2>
      <ul class="space-y-1">
        {toc.map((heading) => (
          <li class={heading.depth === 3 ? "ml-4" : ""}>
            <a
              href={`#${heading.slug}`}
              class="text-sm text-secondary hover:text-accent transition-colors"
            >
              {heading.text}
            </a>
          </li>
        ))}
      </ul>
    </nav>
  )
}
